source 'https://rubygems.org'

# App related
gem 'rails', '3.2.3'
gem 'thin'
gem 'responders'

# Authentication and authorization
gem 'cancan'

# DB Related
gem 'mongoid'
gem 'bson_ext'

# UI Related
gem 'jquery-rails'
gem 'rails-boilerplate'
gem 'haml-rails'
gem 'simple-navigation'

# Assets related
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'compass-rails'
end

# Testing and development
group :test, :development do
  gem 'foreman'
  gem 'guard-rspec'
  gem 'rspec-rails', '~> 2.6'
  gem 'capybara'
  gem 'guard-spork'
  gem 'factory_girl_rails', :branch => :master
  gem 'mongoid-rspec'
end
